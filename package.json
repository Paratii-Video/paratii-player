{
  "name": "paratii-player",
  "private": true,
  "scripts": {
    "start": "meteor run --settings settings-prod.json",
    "dev": "concurrently --kill-others \"npm run testrpc\" \"meteor run --settings settings-dev.json\"",
    "test": "meteor --settings settings-dev.json test --driver-package practicalmeteor:mocha --port 8754",
    "testrpc": "testrpc",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "chimp-watch": "chimp --ddp=http://localhost:3000 --watch --mocha --path=tests",
    "chimp-test": "chimp --ddp=http://localhost:3000 --mocha --path=tests --webdriverio.waitforTimeout=5000"
  },
  "dependencies": {
    "babel-runtime": "^6.20.0",
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "chai": "^4.1.0",
    "eth-lightwallet": "^2.5.6",
    "hooked-web3-provider": "^1.0.0",
    "inline-worker": "^1.1.0",
    "libp2p-crypto": "git+https://github.com/ya7ya/js-libp2p-crypto.git",
    "libp2p-secio": "git+https://github.com/ya7ya/js-libp2p-secio.git",
    "meteor-node-stubs": "~0.2.4",
    "moment": "^2.18.1",
    "pretty-bytes": "^4.0.2",
    "promisify-node": "^0.4.0",
    "stream-buffers": "^3.0.1",
    "web3": "^0.19.1",
    "webworker-threads": "^0.7.13"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-meteor": "^6.26.0",
    "babel-register": "^6.24.1",
    "chimp": "^0.49.1",
    "chromedriver": "^2.30.1",
    "concurrently": "^3.5.0",
    "core-js": "^2.4.1",
    "eslint": "^3.19.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-meteor": "^4.0.1",
    "ethereumjs-testrpc": "^4.0.1",
    "mocha": "^3.4.1",
    "nightmare": "^2.10.0",
    "shell-source": "^1.1.0",
    "shelljs": "^0.7.8"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "plugin:meteor/recommended"
    ],
    "rules": {
      "func-names": "off",
      "import/no-absolute-path": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "meteor/no-session": "off",
      "no-underscore-dangle": "off",
      "prefer-arrow-callback": "off",
      "no-undef": "off",
      "generator-star-spacing": "off",
      "object-shorthand": [
        "error",
        "always",
        {
          "avoidQuotes": false
        }
      ],
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ],
      "react/require-extension": "off"
    },
    "settings": {
      "import/resolver": "meteor"
    }
  }
}
